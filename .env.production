# Production Environment Configuration
NODE_ENV=production
RUST_LOG=warn

# Database Configuration
DB_PATH=%APPDATA%/BackTestr/production.duckdb
DB_MAX_MEMORY=8GB
DB_THREADS=8

# Engine Configuration
ENGINE_TICK_BUFFER_SIZE=1000000
ENGINE_MAX_PARALLEL_ALGORITHMS=8
ENGINE_PYTHON_THREADS=4

# IPC Configuration
IPC_PORT=7880
IPC_MAX_MESSAGE_SIZE=52428800

# API Configuration
UPDATE_SERVER_URL=https://api.backtestr.ai
TELEMETRY_ENABLED=true

# Production Features
HOT_RELOAD=false
DEBUG_MODE=false
PROFILING_ENABLED=false

# Security
CREDENTIAL_STORE=windows_credential_manager
ENCRYPT_LOCAL_DATA=true

# Paths
ALGORITHM_PATH=%APPDATA%/BackTestr/algorithms
DATA_PATH=%APPDATA%/BackTestr/data
CACHE_PATH=%APPDATA%/BackTestr/cache