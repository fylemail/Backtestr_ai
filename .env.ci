# CI/CD Environment Configuration
NODE_ENV=ci
RUST_LOG=info

# Database Configuration
DB_PATH=:memory:
DB_MAX_MEMORY=2GB
DB_THREADS=2

# Engine Configuration
ENGINE_TICK_BUFFER_SIZE=10000
ENGINE_MAX_PARALLEL_ALGORITHMS=2
ENGINE_PYTHON_THREADS=1

# IPC Configuration
IPC_PORT=7879
IPC_MAX_MESSAGE_SIZE=5242880

# API Configuration
UPDATE_SERVER_URL=https://ci.backtestr.ai
TELEMETRY_ENABLED=false

# CI Features
HOT_RELOAD=false
DEBUG_MODE=false
PROFILING_ENABLED=false

# Test Configuration
TEST_TIMEOUT=30000
PARALLEL_TESTS=true
COVERAGE_ENABLED=true

# Paths
ALGORITHM_PATH=./algorithms
DATA_PATH=./data
CACHE_PATH=./data/cache