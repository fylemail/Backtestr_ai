# Example Environment Configuration
# Copy this file to .env.local for custom local settings

# Environment
NODE_ENV=development
RUST_LOG=info

# Database Configuration
DB_PATH=./data/local.duckdb
DB_MAX_MEMORY=4GB
DB_THREADS=4

# Engine Configuration
ENGINE_TICK_BUFFER_SIZE=100000
ENGINE_MAX_PARALLEL_ALGORITHMS=4
ENGINE_PYTHON_THREADS=2

# IPC Configuration
IPC_PORT=7878
IPC_MAX_MESSAGE_SIZE=10485760

# API Configuration
UPDATE_SERVER_URL=http://localhost:8080
TELEMETRY_ENABLED=false

# Features
HOT_RELOAD=true
DEBUG_MODE=true
PROFILING_ENABLED=false

# Epic Feature Flags (Progressive Development)
# Enable these as epics are completed
FEATURE_EPIC_2=false  # Data Pipeline & DuckDB Integration
FEATURE_EPIC_3=false  # Multi-Timeframe State Engine
FEATURE_EPIC_4=false  # Python Algorithm Bridge
FEATURE_EPIC_5=false  # Electron/React Frontend
FEATURE_EPIC_6=false  # Advanced Charting
FEATURE_EPIC_7=false  # Statistical Analysis & Reporting

# Security (Never commit actual credentials!)
# BROKER_API_KEY=your_api_key_here
# BROKER_API_SECRET=your_api_secret_here

# Paths
ALGORITHM_PATH=./algorithms
DATA_PATH=./data
CACHE_PATH=./data/cache